    @RequestMapping("/toEditArticle/{id}/{type}/{action}")
    public String toEditArticle(@PathVariable("id")Long id, @PathVariable("type")Byte type, @PathVariable("action")Byte action, Model model){
        ArticleDTO forObject = restTemplate.getForObject(webPathConfiguration.getDoctorUrl() + "/article/get/" + id, ArticleDTO.class);
        model.addAttribute("article",forObject.getArticle());
        model.addAttribute("articleDepts",forObject.getArticleDepartmentDTOS());
        model.addAttribute("articleAreas",forObject.getArticleAreaDTOS());
        model.addAttribute("articleLogs",forObject.getArticleLogDTOS());
        model.addAttribute("id",id);
        model.addAttribute("type",type);
        model.addAttribute("view",action);
        return "/publish/editContent";
    }

